<div class="nav">
	<div class="list-opts clearfix">
		<div class="nav-links">
			<a href="/admin/mails">邮件列表</a>
		</div>
	</div>
</div>
<div class="main">
<table class="newtable">
	<thead>
		<tr>
			<th colspan="2">查看</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
		<tr>
			<td class="data_label">关键词：</td>
			<td class="data_ipt"><%= @mail.alert.title if @mail.alert %></td>
		</tr>
		<tr>
			<td class="data_label">概要：</td>
			<td class="data_ipt"><%= @mail.summary %></td>
		</tr>
		<tr>
			<td class="data_label">received_at：</td>
			<td class="data_ipt"><%= @mail.received_at.strftime("%Y-%m-%d") %></td>
		</tr>
		<tr>
			<td class="data_label">内容：</td>
			<td class="data_ipt"><%= @mail.body %></td>
		</tr>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
	</tbody>
</table>
</div>
